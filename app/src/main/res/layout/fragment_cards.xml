<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <info.androidhive.slidingmenu.cardUI.ProgressWheel
            android:id="@+id/pw_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ProgressWheel:text="20"
            ProgressWheel:textColor="#FFF"
            ProgressWheel:textSize="30sp"
            ProgressWheel:rimColor="@color/md_grey_50"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barColor="@color/md_blue_600"
            ProgressWheel:barWidth="5dp"
            ProgressWheel:rimWidth="2dp"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Category"
            android:id="@+id/textView5"
            android:textColor="@color/md_green_900"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <info.androidhive.slidingmenu.cardUI.SingleScrollListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="20">

    </info.androidhive.slidingmenu.cardUI.SingleScrollListView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="40"></RelativeLayout>

</LinearLayout>